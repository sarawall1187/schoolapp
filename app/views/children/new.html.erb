<h1>New Child Sign Up!</h1>
<%= form_for @child do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <%= f.label "Choose what Grade your Child is entering:" %>
    <%= f.collection_select :teacher_id, Teacher.all, :id, :grade_taught %>
    <%= f.submit 'Sign Up New Child'%>
    <% end %>