<%= form_for @parent do |f| %>
    <%= f.label 'Email' %>
    <%= f.text_field :email, :placeholder => (@parent.errors.full_messages_for(:email).first) %>
    <%= f.label 'Password' %>
    <%= f.password_field :password, :placeholder => (@parent.errors.full_messages_for(:password).first)%>
    <%= f.label 'Are you an Admin?' %>
    <%= f.check_box :admin %>
    <%= f.submit 'Sign Up'%>
    <% end %>
